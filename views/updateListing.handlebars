<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
   <div class="container text-center">
        <form action="/api/listing/{{Listing.id}}/update" method="POST" role="form">
           <h5 class="teal-text">Update Listing</h5>
            <div class="form-group">
                <label for="">Item Name</label>
                <input type="text" name="title" class="form-control" id="" placeholder="ex: iPhone7 64gb" value="{{Listing.title}}">
            </div>
            <div class="form-group">
                <label for="">Item Description</label>
                <input type="text" name="body" class="form-control" id="" placeholder="ex: New still in box" value="{{Listing.body}}">
            </div>
            <div class="form-group">
            <label for="">Category</label>
            <input type="text" name="category" class="form-control" id="" placeholder="ex: electronics" value="{{Listing.category}}">
        </div>
        <div class="form-group">
            <label for="">Item Price</label>
            <input type="text" name="price" class="form-control" id="" placeholder="$0.00" value="{{Listing.price}}">
        </div>
        <div class="form-group">
            <label for="">Contact Email</label>
            <input type="email" name="contact_email" class="form-control" id="" placeholder="me@me.com" value="{{Listing.contact_email}}">
        </div>
            <a href="/listing/{{Listing.id}}/updatePhotos" class="btn btn-primary">Update Photos</a>
            <button type="submit" class="btn btn-primary">Submit Update</button>
        </form>
    </div> 
