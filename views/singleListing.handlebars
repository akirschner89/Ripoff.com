        <button type='button'  name='btn_contact' class='col s12 btn btn-medium waves-effect teal'><i class="tiny material-icons">contact_mail</i><a href="mailto:{{Listing.contact_email}}?Subject=Swindlers%20List:%20Question%20about%20item:%20{{Listing.title}}">Contact Seller</button>
        <button type="button" class=""><a href="mailto:{{Listing.contact_email}}?Subject=Swindlers%20List:%20Question%20about%20item:%20{{Listing.title}}">Contact Seller</button>
      </div>
  </div>
      <div class="row">
        <div class="rslides_container col s8 offset-s2 m8 offset-m2">
